<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.08">
    tools:context="guytsur.ex1_selfchat.MainActivity">

    <EditText
        android:id="@+id/userInput"
        android:layout_width="270dp"
        android:layout_height="69dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.01"
        android:ems="10"
        android:inputType="text"
        android:text="Write Text Here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/send_button"
        app:layout_constraintTop_toBottomOf="@+id/mainListView" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="79dp"
        android:layout_height="72dp"
        android:text="Button"
        app:layout_constraintBaseline_toBaselineOf="@+id/userInput"
        android:layout_marginRight="37dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/mainListView"
        android:layout_width="366dp"
        android:layout_height="289dp"
        android:layout_weight="0.08"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="-78dp" />
</android.support.constraint.ConstraintLayout>


